<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/items.css" />
  </head>
  <body>
    <header>
      <h1 class="page-title"><%= title %></h1>
    </header>
    <main>
      <% if (items && items.length > 0) { %>
      <section class="items-list">
        <ul>
          <% items.forEach((item) => { %>
          <li class="item">
            <span class="item-name"><%= item.game %></span>
            <div class="item-actions">
              <a class="update-link" href="/update/<%= item.id %>">Update</a>
              <form
                class="delete-form"
                action="/delete/<%= item.id %>"
                method="POST"
              >
                <button class="delete-button" type="submit">Delete</button>
              </form>
            </div>
          </li>
          <% }) %>
        </ul>
      </section>
      <% } %>
      <nav class="navigation">
        <a class="create-link" href="/create">Create New Item</a>
        <a class="categories-link" href="/categories">View All Categories</a>
      </nav>
    </main>
  </body>
</html>
